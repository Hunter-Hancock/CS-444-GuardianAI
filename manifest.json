{
  "manifest_version": 3,
  "name": "GuardianAI",
  "version": "1.0",
  "description": "Designed to enhance online safety for adolescents by detecting and flagging harmful or toxic content.",
  "background": {
    "service_worker": "scripts/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ]
}
